<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff" android:baselineAligned="false">
    <ImageView
            android:layout_width="114dp"
            android:layout_height="44dp"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/huddle"
            android:contentDescription="Huddle logo"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Take photo"
            android:id="@+id/button"/>
    <View android:layout_width="wrap_content"
      android:layout_height="5dp"
      android:layout_marginTop="60dp"
      android:background="#00ff00" android:layout_gravity="center"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageViewMain" android:layout_gravity="center" android:contentDescription="Your photo"
            android:layout_marginLeft="82dp" android:layout_marginRight="22dp" android:background="#0088cf"/>

</LinearLayout>

